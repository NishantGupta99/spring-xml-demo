<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context/
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="employee" scope="singleton"
		class="com.test.EmployeeBean">
		<constructor-arg value="HR"></constructor-arg>
		<constructor-arg ref="department"></constructor-arg>
	</bean>

	<bean id="department" class="com.test.DepartmentBean">
		<property name="deptName" value="Human Resource" />
	</bean>
</beans>